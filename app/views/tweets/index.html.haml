= render "tweets/header"
.index
  .index__page
    - @tweets.each do |tweet|
      .index__page__name
        = link_to tweet.user.nickname, user_path(tweet.user)
      = link_to "/tweets/#{tweet.id}" do
        .index__page__tweet
          = tweet.text
  = paginate(@tweets)
